{
  "name": "verification-service",
  "version": "1.0.0",
  "description": "Verification microservice for banking platform",
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",
    "start:dev": "nest start --watch",
    "build": "rimraf dist && nest build",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=./prisma/schema.prisma",
    "start:worker": "ts-node src/worker.ts",
    "lint": "eslint \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts}\" --fix",
    "prettier": "prettier --check \"src/**/*.{js,ts,json,md}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,ts,json,md}\""
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/microservices": "^10.4.17",
    "@nestjs/platform-express": "^10.4.17",
    "@prisma/client": "^6.7.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.7",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "minio": "^8.0.5",
    "multer": "^1.4.5-lts.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/node": "^22.15.2",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
